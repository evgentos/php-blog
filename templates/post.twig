{% extends "base.twig" %}

{% block body %}
<div class="container">
  <div class="row">
    {% if post.image_path is not null %}
      <img src="{{ post.image_path }}" class="card-img-top" alt="{{ post.title|escape }}">
    {% endif %}
    <h1 class="mt-3 mb-3">{{ post.title|escape }}</h1>
    <div class="container mb-3">
      <div class="row">
        <span class="text-muted">Max Facktor | {{ post.published_date|date("F d, Y") }}</span>
      </div>
    </div>
    <div>
      {{ post.content|raw }}
    </div>
  </div>
</div>
{% endblock body %}